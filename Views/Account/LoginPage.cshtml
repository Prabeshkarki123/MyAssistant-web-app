@model MyAssistant.Models.User;
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
	<head>
		<title>login</title>
		<meta charset="utf-8" content="width=device-width" name="viewport"/>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/js" />
		<link rel="stylesheet" href="~/css/site.css"/>
	</head>
	<body>
		<div class="h-100 gradient-form" style="background-color: rgb(255, 253, 245);">
			<div class="container py-5 h-100 px-lg-5">
			<div class="row d-flex justify-content-center g-0 h-100 mx-4 mx-lg-5">
					<div class="col-lg-6 d-inline-block px-5 rounded-5 border rounded-start bg-white">
						<div class="card-body p-md-3 mx-md-4">
							<div class="text-center">
								<img src="~/images/logo1.png" alt="logo" class="rounded-circle img-fluid" style="width: 50px; height: 50px; object-fit: cover;">
								<h4 class="mt-1 mb-5">My Assistant</h4>
							</div>
							<form asp-action="LoginPage" method="post" class="d-flex flex-column"> 
								<!-- Email input -->
								<label class="form-label" for="form3Example3">Email address</label>
								<div data-mdb-input-init class="form-outline mb-4">
									<input type="email" id="form3Example3" asp-for="Email" class="form-control form-control-sm" placeholder="Enter email address" />
								</div>

								<!-- Password input -->
								<label class="form-label" for="form3Example4">Password</label>
								<div data-mdb-input-init class="form-outline mb-3">
									<input type="password" id="form3Example4" asp-for="Password" class="form-control form-control-sm" placeholder="Enter Password" />
								</div>

								<div class="d-flex flex-column text-center pt-1 mb-5 pb-1">
									<button type="submit" class="btn text-white btn-block fa-lg gradient-custom-2 mb-3" type="button"> Login</button>
									<a class="text-muted" href="#!">Forget password?</a>
								</div>



									@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
									{
										<div class="text-danger">
											@ViewBag.ErrorMessage
										</div>
									}



								<div class="d-flex align-items-center justify-content-center pb-4">
									<p class="mb-0 me-2">Don't have an account?</p>
									<button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-danger">Create new</button>
								</div>

							</form>
						</div>
					</div>

					<div class="col-lg-6 d-flex align-items-center gradient-custom-2">
						<div class="text-white px-3 py-4 p-md-5 mx-md-4">
						<h4 class="mb-4">Welcome to Your Personal Manager</h4>
								<p class="small mb-0">
									Life is busy. Your thoughts, tasks, goals, and
									memories deserve a home that's as organized as 
									your ambition.

									This space is built just for you — to plan, store, 
									reflect, and grow.

									Every idea matters. Every goal counts. Let's make 
									every day purposeful.
								</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>